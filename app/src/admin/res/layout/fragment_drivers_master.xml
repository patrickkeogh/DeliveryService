<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_8dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_drivers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_empty_view"
        android:text="@string/msg_there_are_no_drivers_to_show"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<!-- A progress bar that will be shown to users to indicate that weather data is loading -->
<ProgressBar
    android:id="@+id/pb_loading_indicator"
    android:layout_width="@dimen/progress_bar_height_width"
    android:layout_height="@dimen/progress_bar_height_width"
    android:layout_gravity="center"
    android:visibility="invisible" />
</FrameLayout>