<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Driver Information"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_view_accent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="Patrick Keogh" />

                <TextView
                    android:id="@+id/tv_driver_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_verify_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Verify Driver"
                    android:textColor="@color/colorWhite"
                    app:backgroundTint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_driver_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="This driver has been verified." />

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="12dp"-->
                    <!--android:text="Driver Photo"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
                    <!--android:textColor="@color/colorPrimaryDark" />-->

                <!--<View-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="2dp"-->
                    <!--android:layout_marginBottom="4dp"-->
                    <!--android:layout_marginTop="4dp"-->
                    <!--android:background="@color/colorAccent" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/iv_driver_details_photo"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:layout_width="300dp"-->
                    <!--android:layout_height="250dp" />-->


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>