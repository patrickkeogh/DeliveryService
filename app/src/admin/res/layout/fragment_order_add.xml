<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Select Customer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/layout_order_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/iv_select_customer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="fill"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_account_circle_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/padding_8dp"
                        android:paddingStart="8dp">


                        <TextView
                            android:id="@+id/tv_admin_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/black"
                            tools:text="Harvey's" />

                        <TextView
                            android:id="@+id/tv_admin_customer_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            tools:text="Monday September 11th, 2014" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="Select Pickup date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/layout_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/iv_select_date"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="fill"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_date_range_24dp" />

                    <TextView
                        android:id="@+id/tv_pickup_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Monday March 17th, 2018"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@android:color/black" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Select Pickup Location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/layout_order_location_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/iv_select_location_pickup"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="fill"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_place_accent_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/padding_8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tv_cust_location_pickup_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/black"
                            tools:text="Harvey's" />

                        <TextView
                            android:id="@+id/tv_cust_location_pickup_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            tools:text="Monday September 11th, 2014" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Select Delivery Location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/layout_order_location_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/iv_select_location_delivery"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="fill"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_place_accent_24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/padding_8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tv_cust_location_delivery_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/black"
                            tools:text="Harvey's" />

                        <TextView
                            android:id="@+id/tv_cust_location_delivery_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            tools:text="Monday September 11th, 2014" />

                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/btn_phone_order_add"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Book Phone Order"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_phone_order_cancel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorAccent"
                    android:text="Cancel/Reset Form"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>